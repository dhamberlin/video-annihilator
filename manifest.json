{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Video Annihilator",
    "description": "Single-click video deletion",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Kill videos"
    },
    "background": {
        "persitent": false,
        "scripts": ["annihilator.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["nuke.js"]
    }],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "permissions": [
        "activeTab",
        "<all_urls>"
    ]
}